<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_admin_home">

    <fragment
        android:id="@+id/nav_host_fragment_content_admin_home"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation2" />
    <!--header part-->
    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="348dp"
        android:layout_height="37dp"
        android:fontFamily="sans-serif-medium"
        android:text="Borrow Smart, Live Better."
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/txtIntro2"
        android:layout_width="263dp"
        android:layout_height="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="View all the records fast"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />
    <GridLayout
        android:id="@+id/gridMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtIntro2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--APPROVED LOAN-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            android:onClick="onClickApprovedLoan">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!--RIGHT ARROW -->
                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/loanArrow"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />

                <!--ICON LEFT-->
                <ImageView
                    android:id="@+id/mainIcon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/loanHand"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved Loan"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:textSize="18sp"
                    android:layout_below="@id/mainIcon"
                    android:layout_marginTop="35dp" />
                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See the list of Approved Loan"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    android:layout_below="@id/title"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--DISAPPROVED LOAN-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            android:onClick="onClickDisapprovedLoan"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!--RIGHT ARROW -->
                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/loanArrow"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />

                <!--ICON LEFT-->
                <ImageView
                    android:id="@+id/mainIcon2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/loanHand"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="152dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/mainIcon2"
                    android:layout_marginTop="30dp"
                    android:text="Disapproved Loan"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"/>
                <TextView
                    android:id="@+id/desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See the list of the Disapproved Loan"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    android:layout_below="@id/title2"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--LOAN APPLICATION-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            android:onClick="onClickLoanApplications">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!--RIGHT ARROW -->
                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/loanArrow"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />

                <!--ICON LEFT-->
                <ImageView
                    android:id="@+id/mainIcon3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/loanBag"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="131dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/mainIcon3"
                    android:layout_marginTop="25dp"
                    android:text="Loan Applications"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"/>
                <TextView
                    android:id="@+id/desc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See the list of all Loan Applications"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    android:layout_below="@id/title3"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--RECORD-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            android:onClick="onClickRecord">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!--RIGHT ARROW -->
                <ImageView
                    android:id="@+id/arrow4"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/loanArrow"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />

                <!--ICON LEFT-->
                <ImageView
                    android:id="@+id/mainIcon4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/loanBag"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mainIcon4"
                    android:layout_marginTop="40dp"
                    android:text="Record"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"/>
                <TextView
                    android:id="@+id/desc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See the list of all User's Record"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    android:layout_below="@id/title4"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>